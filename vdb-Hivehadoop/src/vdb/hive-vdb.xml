<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<vdb name="hivevdb" version="1">

	<property name="UseConnectorMetadata" value="true" />

   <model name="HiveServer2Source">
        <property name="importer.useFullSchemaName" value="false"/>
        <source name="hive-connector" translator-name="translator-hive" connection-jndi-name="java:/hive-ds"/>
    </model>
    
    <model name="EmployeeModel" type="VIRTUAL">
        
        <metadata type="DDL"><![CDATA[

		CREATE VIEW EMPLOYEEVIEW (
        	id integer,
        	name string,
        	salary string,
        	destination string
        )
        AS
        SELECT E.eid, E.name, E.salary, E.destination FROM employee AS E;
         ]]> </metadata>
    </model>
    
     <translator name="translator-hive" type="hive">
        <property name="SupportsNativeQueries" value="true"/>
    </translator>
    
</vdb>
